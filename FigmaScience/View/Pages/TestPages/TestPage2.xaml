<Page x:Class="FigmaScience.View.Pages.TestPages.TestPage2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FigmaScience.View.Pages.TestPages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="TestPage2">

    <Grid>
        <TabControl Name="Pro">
            <TabItem Name="v1">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="1">1</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" Text="Тип монтажа макета, при котором сайт будет хорошо выглядеть на любых устройствах: как на больших мониторах компьютеров и лэптопов, так и на меньших экранах планшетов и смартфонов:" FontSize="20" TextWrapping="Wrap" TextAlignment="Center"/>
                        <TextBlock Margin="10" Text="1  Figma;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="2  Программирование;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="3  Интерфейс;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="4  Адаптивная верстка." HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBox Name="TextBox1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="75" Height="30"/>
                        <Button Name="p1" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="100" Height="30" FontSize="20" Click="p1_Click" Background="Orange"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem Name="v2">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="1">2</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" Text="Программные модули, упрощающие добавление в макет определенных элементов, заполнение фреймов картинками, ускоряющие работу со шрифтами и прочее:" FontSize="20" TextWrapping="Wrap" TextAlignment="Center"/>
                        <TextBlock Margin="10" Text="1  Плагины;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="2  Интерфейс;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="3  Веб-дизайн;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="4  Фреймы." HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBox Name="TextBox2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="75" Height="30"/>
                        <Button Name="p2" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="100" Height="30" FontSize="20" Click="p2_Click" Background="Orange"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem Name="v3">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="1">3</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" Text="Небольшая веб-страница, посвященная одному человеку:" FontSize="20" TextWrapping="Wrap" TextAlignment="Center"/>
                        <TextBlock Margin="10" Text="1  Веб-мастер;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="2  Персональный сайт;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="3  Дизайнер;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="4  Сервер." HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBox Name="TextBox3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="75" Height="30"/>
                        <Button Name="p3" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="100" Height="30" FontSize="20" Click="p3_Click" Background="Orange"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem Name="v4">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="1">4</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" Text="Какой плагин поможет быстро определить цветовую палитру мудборда:" FontSize="20" TextWrapping="Wrap" TextAlignment="Center"/>
                        <TextBlock Margin="10" Text="1  Icons8;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="2  Font Replacer;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="3  Image palette;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="4  Blops." HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBox Name="TextBox4" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="75" Height="30"/>
                        <Button Name="p4" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="100" Height="30" FontSize="20" Click="p4_Click" Background="Orange"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem Name="v5">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="1">5</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" Text="Какая кнопка позволяет давать доступ по ссылке:" FontSize="20" TextWrapping="Wrap" TextAlignment="Center"/>
                        <TextBlock Margin="10" Text="1  Share;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="2  Лапка;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="3  Export;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="4  Log out." HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBox Name="TextBox5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="75" Height="30"/>
                        <Button Name="p5" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="100" Height="30" FontSize="20" Click="p5_Click" Background="Orange"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem Name="Result">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="1">Результат</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="500" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="50" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="100" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="100" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="10" />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="2" Grid.Column="1" FontSize="30" Name="ScoresTxb"/>
                            <Button Grid.Row="6" Grid.Column="1" Name="ShowResultBtn" Content="Показать результат" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20" Width="400" Height="60" FontSize="30" Click="ShowResultBtn_Click" Background="Orange"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" FontSize="30" Name="MarkTxb"/>
                            <Button Grid.Row="8" Grid.Column="1" Name="SaveResultBtn" Content="Сохранить результат" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20" Width="400" Height="60" FontSize="30" Click="SaveResultBtn_Click" Background="Orange"/>
                        </Grid>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
