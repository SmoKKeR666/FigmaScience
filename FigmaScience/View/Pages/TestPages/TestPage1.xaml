<Page x:Class="FigmaScience.View.Pages.TestPages.TestPage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FigmaScience.View.Pages.TestPages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="TestPage1">

    <Grid>
        <TabControl Name="Basics">
            <TabItem Name="v1">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="1">1</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" Text="Одна из отраслей веб-разработки, которая занимается проектированием пользовательских интерфейсов для сайтов и мобильных приложений:" FontSize="20" TextWrapping="Wrap" TextAlignment="Center"/>
                        <TextBlock Margin="10" Text="1  Веб-дизайн;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="2  Кулинария;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="3  Википедия;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="4  Яндекс." HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBox Name="TextBox1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="75" Height="30"/>
                        <Button Name="p1" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="100" Height="30" FontSize="20" Click="p1_Click" Background="Orange"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem Name="v2">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="1">2</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" Text="Что нужно выбрать, чтобы сделать заливку в виде линейного градиента:" FontSize="20" TextWrapping="Wrap" TextAlignment="Center"/>
                        <TextBlock Margin="10" Text="1  Image;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="2  Linear;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="3  Solid;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="4  Radial." HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBox Name="TextBox2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="75" Height="30"/>
                        <Button Name="p2" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="100" Height="30" FontSize="20" Click="p2_Click" Background="Orange"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem Name="v3">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="1">3</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" Text="Какой предмет вы изучаете в этом тесте:" FontSize="20" TextWrapping="Wrap" TextAlignment="Center"/>
                        <TextBlock Margin="10" Text="1  Python;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="2  Figma;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="3  Sketch;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="4  WordPress." HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBox Name="TextBox3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="75" Height="30"/>
                        <Button Name="p3" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="100" Height="30" FontSize="20" Click="p3_Click" Background="Orange"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem Name="v4">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="1">4</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" Text="Какую иконку нужно нажать для создания нового проекта:" FontSize="20" TextWrapping="Wrap" TextAlignment="Center"/>
                        <TextBlock Margin="10" Text="1  Design;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="2  New design file;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="3  Share;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="4  Figma like the pros." HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBox Name="TextBox4" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="75" Height="30"/>
                        <Button Name="p4" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="100" Height="30" FontSize="20" Click="p4_Click" Background="Orange"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem Name="v5">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="1">5</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <TextBlock Margin="10" Text="Что нажать для добавления фрейма:" FontSize="20" TextWrapping="Wrap" TextAlignment="Center"/>
                        <TextBlock Margin="10" Text="1  Перо;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="2  Figma;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="3  Квадрат;" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBlock Margin="10" Text="4  Кнопка Frame." HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"/>
                        <TextBox Name="TextBox5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="75" Height="30"/>
                        <Button Name="p5" Content="Принять" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="100" Height="30" FontSize="20" Click="p5_Click" Background="Orange"/>
                    </StackPanel>
                </TabItem.Content>
            </TabItem>

            <TabItem Name="Result">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="1">Результат</TextBlock>
                    </StackPanel>
                </TabItem.Header>
                <TabItem.Content>
                    <StackPanel Margin="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="500" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="50" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="100" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="100" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="10" />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="2" Grid.Column="1" FontSize="30" Name="ScoresTxb"/>
                            <Button Grid.Row="6" Grid.Column="1" Name="ShowResultBtn" Content="Показать результат" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20" Width="400" Height="60" FontSize="30" Click="ShowResultBtn_Click" Background="Orange"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" FontSize="30" Name="MarkTxb"/>
                            <Button Grid.Row="8" Grid.Column="1" Name="SaveResultBtn" Content="Сохранить результат" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20" Width="400" Height="60" FontSize="30" Click="SaveResultBtn_Click" Background="Orange"/>
                        </Grid>                       
                    </StackPanel>
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
